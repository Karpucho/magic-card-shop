<div id="card-{{this.id}}">
  <p>Имя: {{this.cardsName}}</p>
  <img src="{{this.image}}">
  <p>Цена:{{this.price}}</p>
  <p>Состояние:{{this.condition}}</p>
  <p>Город:{{this.city}}</p>
  {{#if indexForm}}
  <form name="addToBasket" action="/">
    <input type="submit" value="Купить">
  </form>
  {{/if}}
  {{#if storageForm}}
  <form name="editCard">
    <input type="submit" value="Редактировать">
  </form>
  <form name="deleteCard">
    <input type="submit" value="Удалить">
  </form>
  {{/if}}
  {{#if this.basketForm}}
  <form name="deleteFromBasket">
    <input type="submit" value="Удалить">
  </form>
  {{/if}}
</div>
